/*
	This is short program, wich shows 
	that it cannot be writen in read-only text file.

	The program reads text file properly with [ifstream] object,
	and tries to write a text inside read-only text file with [ofstream] object.
*/

#include <iostream>
#include <fstream>
#include <string>

using namespace std;

void readFile(const string fileName)
{
	string line;
	ifstream myfile(fileName);
	if (myfile.is_open())
	{
		while (getline(myfile, line))
		{
			cout << line << '\n';
		}
		cout << endl;
		myfile.close();
	}
	//if error occurs...
	else
	{
		cerr << "Unable to open " << fileName << endl << endl;
	}
}

void writeOnFile(const string fileName, const string content)
{
	ofstream myfile;
	myfile.open("example.txt");
	if (myfile.is_open())
	{
		myfile << content;
		myfile.close();
	}
	//if error occurs...
	else
	{
		cerr << "Unable to write in " << fileName << endl << endl;
	}
}

int main() {

	const string fileName = "example.txt";
	const string content = "new content for the file";


	cout << "reading file - " << fileName <<  ":" << endl;
	readFile(fileName);

	cout << "writing inside file - " << fileName << ":" << endl;
	writeOnFile(fileName, content);

	cout << "reading file - " << fileName << ":" << endl;
	readFile(fileName);

	return 0;
}
























